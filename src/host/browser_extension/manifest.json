{
    "manifest_version": 2,
    "name": "__MSG_extensionName__",
    "description": "__MSG_extensionDescription__",
    "version": "1.0",
    "default_locale": "en",

    "icons": {
        "16":  "icon/icon_16.png",
        "32":  "icon/icon_32.png",
        "48":  "icon/icon_48.png",
        "96":  "icon/icon_96.png",
        "128": "icon/icon_128.png"
    },

    "browser_action": {
        "default_icon": {
            "16": "icon/icon_16.png",
            "32": "icon/icon_32.png"
        },
        "default_title": "Snopf Password request",
        "default_popup": "html/menu.html",
        "browser_style": false
    },

    "background": {
        "scripts": ["js/background.js"]
    },

    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["js/jquery-3.3.1.min.js", "js/content_script.js"]
    }],

    "options_ui": {
        "page": "html/options.html"
    },

    "permissions": ["activeTab", "nativeMessaging", "storage"],
   
    "applications": {
        "gecko": {"id": "snopf@snopf.com", "strict_min_version": "42.0"}
    }
}
